// Same options used on https://github.com/wikimedia/mediawiki-core/blob/master/.jshintrc
{
	// Enforcing
	"bitwise": true,
	"eqeqeq": true,
	"es3": true,
	"freeze": true,
	"latedef": true,
	"noarg": true,
	"nonew": true,
	"undef": true,
	"unused": true,
	"strict": false,

	// Relaxing
	"laxbreak": true,
	"multistr": true,

	// Environment
	"browser": true,

	"globals": {
		"mediaWiki": true,
		"jQuery": false,
		"QUnit": false
	},

	// Legacy (to be handled by jscs once supported)
	"camelcase": true,
	"nomen": true
}